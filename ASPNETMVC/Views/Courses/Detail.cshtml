@model CoursesManagement.Domain.Course
@{
    ViewBag.Title = "Detail";
}

<h2>Grades list for @Model.Name graded by @Model.Teacher.Name</h2>
<table class="table">
    <thead>
        <td>Student</td>
        <td>Grade</td>
    </thead>
    <tbody>
        @foreach(var grade in Model.Grades)
        {
            <tr>
                <td>@grade.Student.Name</td>
                <td>@grade.Value</td>
            </tr>
        }
    </tbody>
</table>

